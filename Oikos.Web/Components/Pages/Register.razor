@page "/register"
@rendermode InteractiveServer
@attribute [AllowAnonymous]
@layout EmptyLayout
@using Oikos.Web.Components.Layout

<div class="register-page">

    @if (_step == 1)
    {
        <!-- Step 1: Questionnaire -->
        <div class="register-page__questionnaire">
            <div class="register-page__logo">
                <img src="images/rechtfix-logo.svg" alt="Rechtfix Logo" />
            </div>

            @if (!_questionnaireDone)
            {
                <MudText Typo="Typo.h4" Class="register-page__q-title">Kurze Fragen vorab</MudText>
                <MudText Typo="Typo.body2" Class="register-page__q-subtitle">
                    Beantworten Sie uns kurz ein paar Fragen, um zu sehen, ob wir Ihnen helfen können.
                </MudText>

                <div class="register-page__q-card">
                    @foreach (var q in _questions)
                    {
                        <div class="register-page__q-item">
                            <MudText Typo="Typo.body1" Class="register-page__q-text">@q.Value</MudText>
                            <div class="register-page__q-buttons">
                                <MudButton Variant="@(_answers[q.Key] == true ? Variant.Filled : Variant.Outlined)"
                                           Color="Color.Primary"
                                           Size="Size.Small"
                                           OnClick="@(() => SetAnswer(q.Key, true))">
                                    Ja
                                </MudButton>
                                <MudButton Variant="@(_answers[q.Key] == false ? Variant.Filled : Variant.Outlined)"
                                           Color="Color.Default"
                                           Size="Size.Small"
                                           OnClick="@(() => SetAnswer(q.Key, false))">
                                    Nein
                                </MudButton>
                            </div>
                        </div>
                    }

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="register-page__q-submit"
                               Disabled="@(!AllAnswered)"
                               OnClick="FinishQuestionnaire">
                        Weiter
                    </MudButton>
                </div>
            }
            else
            {
                <!-- Result card -->
                <div class="register-page__result-card">
                    <div class="register-page__result-icon">
                        <MudIcon Icon="@Icons.Material.Filled.CheckCircleOutline" Color="Color.Primary" Size="Size.Large" />
                    </div>
                    <MudText Typo="Typo.h5" Class="register-page__result-title">
                        Sie sind bei uns genau richtig!
                    </MudText>
                    <MudText Typo="Typo.body2" Class="register-page__result-text">
                        RECHTFIX automatisiert Ihr Forderungsmanagement und reduziert Zahlungsausfälle.
                        Lassen Sie uns gemeinsam Ihre offenen Forderungen professionell einziehen.
                    </MudText>
                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               Class="register-page__result-btn"
                               OnClick="@(() => _step = 2)">
                        Jetzt registrieren
                    </MudButton>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Step 2 or 3: form shell with header -->
        <div class="register-page__form-shell">
            <!-- Top header: logo + 3-step stepper -->
            <header class="register-page__header">
                <div class="register-page__header-logo">
                    <img src="images/rechtfix-logo.svg" alt="Rechtfix Logo" />
                </div>
                <div class="register-page__stepper">
                    <!-- Step 1: Firmendaten -->
                    <div class="register-page__step">
                        <span class="register-page__step-num @(_step == 2 ? "register-page__step-num--active" : "") @(_step > 2 ? "register-page__step-num--done" : "")">
                            @if (_step > 2)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Check" Style="font-size:14px;" />
                            }
                            else
                            {
                                <span>1</span>
                            }
                        </span>
                        <span class="register-page__step-label @(_step == 2 ? "register-page__step-label--active" : "")">Firmendaten</span>
                    </div>
                    <div class="register-page__step-line"></div>
                    <!-- Step 2: Mitgliedschaft wählen -->
                    <div class="register-page__step">
                        <span class="register-page__step-num @(_step == 3 ? "register-page__step-num--active" : "") @(_step > 3 ? "register-page__step-num--done" : "")">
                            @if (_step > 3)
                            {
                                <MudIcon Icon="@Icons.Material.Filled.Check" Style="font-size:14px;" />
                            }
                            else
                            {
                                <span>2</span>
                            }
                        </span>
                        <span class="register-page__step-label @(_step == 3 ? "register-page__step-label--active" : "")">Mitgliedschaft wählen</span>
                    </div>
                    <div class="register-page__step-line"></div>
                    <!-- Step 3: Bezahlung -->
                    <div class="register-page__step">
                        <span class="register-page__step-num @(_step == 4 ? "register-page__step-num--active" : "")">3</span>
                        <span class="register-page__step-label @(_step == 4 ? "register-page__step-label--active" : "")">Bezahlung</span>
                    </div>
                </div>
                <div class="register-page__header-spacer"></div>
            </header>

            @if (_step == 2)
            {
            <!-- Step 2: Registration form (Firmendaten) -->
            <div class="register-page__body">
            <div class="register-page__form-panel">
                <MudText Typo="Typo.body2" Class="register-page__login-hint">
                    @Loc["Register_Subtitle"]
                    <MudLink Href="/login">@Loc["Register_SubtitleLink"]</MudLink>
                </MudText>

                <EditForm Model="_model" OnValidSubmit="SubmitRegistration" FormName="register-page">
                    <DataAnnotationsValidator />

                    <div class="register-page__grid">
                        <MudTextField @bind-Value="_model.Company"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_CompanyLabel"]"
                                      For="@(() => _model.Company)" />

                        <div class="register-page__native-select-wrap">
                            <label class="register-page__native-label">@Loc["Register_GenderLabel"]</label>
                            <select class="register-page__native-select" @bind="_model.Gender">
                                <option value="">@Loc["Register_GenderPlaceholder"]</option>
                                <option value="m">@Loc["Register_GenderOptionMale"]</option>
                                <option value="f">@Loc["Register_GenderOptionFemale"]</option>
                                <option value="d">@Loc["Register_GenderOptionDiverse"]</option>
                            </select>
                        </div>

                        <div class="register-page__native-select-wrap">
                            <label class="register-page__native-label">@Loc["Register_TitleLabel"]</label>
                            <select class="register-page__native-select" @bind="_model.Title">
                                <option value="">@Loc["Register_TitlePlaceholder"]</option>
                                <option value="Dr.">@Loc["Register_TitleOptionDr"]</option>
                                <option value="Prof.">@Loc["Register_TitleOptionProf"]</option>
                                <option value="Prof. Dr.">@Loc["Register_TitleOptionProfDr"]</option>
                            </select>
                        </div>

                        <MudTextField @bind-Value="_model.FirstName"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_FirstNameLabel"]"
                                      For="@(() => _model.FirstName)" />

                        <MudTextField @bind-Value="_model.LastName"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_LastNameLabel"]"
                                      For="@(() => _model.LastName)" />

                        <MudTextField @bind-Value="_model.Email"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_EmailLabel"]"
                                      For="@(() => _model.Email)" />

                        <MudTextField @bind-Value="_model.PartnerCode"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_PartnerCodeLabel"]"
                                      HelperText="@Loc["Register_PartnerCodeHelper"]"
                                      For="@(() => _model.PartnerCode)" />

                        <MudTextField @bind-Value="_model.Password"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_PasswordLabel"]"
                                      InputType="InputType.Password"
                                      For="@(() => _model.Password)" />

                        <MudTextField @bind-Value="_model.ConfirmPassword"
                                      Variant="Variant.Filled" Margin="Margin.Dense"
                                      Label="@Loc["Register_ConfirmPasswordLabel"]"
                                      InputType="InputType.Password"
                                      For="@(() => _model.ConfirmPassword)" />
                    </div>

                    <MudText Typo="Typo.caption" Class="register-page__hint">
                        @Loc["Register_SubscriptionHint"]
                    </MudText>

                    <div class="register-page__privacy">
                        <MudCheckBox T="bool" @bind-Value="_model.AcceptedPrivacy" />
                        <MudText Typo="Typo.body2">
                            @Loc["Register_PrivacyPrefix"]
                            <MudLink Href="https://www.online-mahnantraege.de/datenschutz" Target="_blank">
                                @Loc["Register_PrivacyLinkText"]
                            </MudLink>
                        </MudText>
                    </div>

                    <MudButton Variant="Variant.Filled"
                               Color="Color.Primary"
                               ButtonType="ButtonType.Submit"
                               Class="register-page__submit"
                               Disabled="_isLoading">
                        @if (_isLoading)
                        {
                            <MudProgressCircular Color="Color.Inherit" Indeterminate="true" Size="Size.Small" />
                        }
                        else
                        {
                            <MudText>@Loc["Register_SubmitButton"]</MudText>
                        }
                    </MudButton>
                </EditForm>
            </div>
            </div> <!-- /register-page__body step 2 -->
            }

            @if (_step == 3)
            {
            <!-- Step 3: Plan selection (Mitgliedschaft wählen) -->
            <div class="register-page__body register-page__body--plan">
                <div class="register-page__plan-shell">

                    <!-- Title + toggle + subtitle -->
                    <div class="register-page__plan-heading">
                        <h1 class="register-page__plan-title">Wählen Sie Ihre Mitgliedschaft</h1>
                        <div class="register-page__billing-toggle">
                            <button class="register-page__toggle-btn @(_billingInterval == "monthly" ? "register-page__toggle-btn--active" : "")"
                                    @onclick="@(() => { _billingInterval = "monthly"; _selectedPlanId = null; })">
                                Monatlich
                            </button>
                            <button class="register-page__toggle-btn @(_billingInterval == "yearly" ? "register-page__toggle-btn--active" : "")"
                                    @onclick="@(() => { _billingInterval = "yearly"; _selectedPlanId = null; })">
                                Jährlich
                                <span class="register-page__save-badge">2 Monate sparen</span>
                            </button>
                        </div>
                        <p class="register-page__plan-subtitle">Alle Mitgliedschaften haben eine Laufzeit von 12 Monaten</p>
                    </div>

                    <!-- Plan cards -->
                    <div class="register-page__plan-grid">
                        @foreach (var plan in _plans)
                        {
                            var isSelected = _selectedPlanId == plan.Id;
                            var displayPrice = _billingInterval == "yearly" ? plan.YearlyPrice : plan.MonthlyPrice;
                            var isPopular = plan.Slug.ToLower() == "standard";
                            var periodLabel = _billingInterval == "yearly" ? "Jahr" : "Monat";

                            <div class="register-page__plan-card @(isSelected ? "register-page__plan-card--selected" : "") @(isPopular ? "register-page__plan-card--popular" : "")"
                                 @onclick="@(() => _selectedPlanId = plan.Id)">
                                @if (isPopular)
                                {
                                    <div class="register-page__plan-badge">Beliebteste Wahl</div>
                                }
                                <div class="register-page__plan-card-header">
                                    <span class="register-page__plan-name">@plan.Name</span>
                                    @if (isSelected)
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.Check" Style="color:var(--mud-palette-primary);font-size:20px;" />
                                    }
                                </div>
                                <p class="register-page__plan-desc">@plan.Description</p>
                                <div class="register-page__plan-price-block">
                                    <div class="register-page__plan-price">
                                        <span class="register-page__plan-amount">€@displayPrice.ToString("0")</span>
                                        <span class="register-page__plan-period"> / @periodLabel</span>
                                    </div>
                                    <p class="register-page__plan-price-note">Jahrespreis monatlich zahlbar</p>
                                </div>
                                <ul class="register-page__plan-features">
                                    @if (plan.MonthlyClaimLimit.HasValue)
                                    {
                                        <li>
                                            <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Primary" />
                                            <span>@plan.MonthlyClaimLimit Forderungsfälle/Monat</span>
                                        </li>
                                    }
                                    @if (plan.MonthlyBionicCheckLimit.HasValue && plan.MonthlyBionicCheckLimit > 0)
                                    {
                                        <li>
                                            <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Primary" />
                                            <span>@plan.MonthlyBionicCheckLimit Bonix-Checks/Monat</span>
                                        </li>
                                    }
                                    @if (plan.TeamSeatLimit.HasValue)
                                    {
                                        <li>
                                            <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Primary" />
                                            <span>@plan.TeamSeatLimit Teamzugänge</span>
                                        </li>
                                    }
                                    else
                                    {
                                        <li>
                                            <MudIcon Icon="@Icons.Material.Filled.Check" Size="Size.Small" Color="Color.Primary" />
                                            <span>Unbegrenzte Teamzugänge</span>
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>

                    <!-- Actions -->
                    <div class="register-page__plan-actions">
                        <MudButton Variant="Variant.Outlined" Size="Size.Large"
                                   StartIcon="@Icons.Material.Filled.ArrowBack"
                                   OnClick="@(() => _step = 2)">
                            Zurück
                        </MudButton>
                        <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large"
                                   Disabled="@(_selectedPlanId == null || _isActivatingPlan)"
                                   OnClick="ActivateAndProceed">
                            @if (_isActivatingPlan)
                            {
                                <MudProgressCircular Color="Color.Inherit" Indeterminate="true" Size="Size.Small" />
                            }
                            else
                            {
                                <span>Weiter zur Bezahlung</span>
                                <MudIcon Icon="@Icons.Material.Filled.ArrowForward" Size="Size.Small" Class="ml-1" />
                            }
                        </MudButton>
                    </div>
                </div>
            </div> <!-- /register-page__body step 3 -->
            }

        </div>
    }

</div>

<style>
    .register-page {
        min-height: 100vh;
        background: #f9fafb;
        display: flex;
        flex-direction: column;
    }

    /* ── Step 1: questionnaire centered ── */
    .register-page__questionnaire {
        flex: 1;
        width: 100%;
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    .register-page__logo img {
        height: 40px;
    }

    .register-page__q-title {
        text-align: center;
        font-weight: 700;
    }

    .register-page__q-subtitle {
        text-align: center;
        color: var(--mud-palette-text-secondary);
    }

    .register-page__q-card {
        width: 100%;
        background: white;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .register-page__q-item {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .register-page__q-text {
        font-weight: 500;
    }

    .register-page__q-buttons {
        display: flex;
        gap: 0.5rem;
    }

    .register-page__q-submit {
        width: 100%;
        margin-top: 0.5rem;
    }

    .register-page__result-card {
        width: 100%;
        background: white;
        border-radius: 12px;
        border: 2px solid var(--mud-palette-primary);
        padding: 2.5rem 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
        text-align: center;
    }

    .register-page__result-icon {
        font-size: 3rem;
        display: flex;
    }

    .register-page__result-title {
        font-weight: 700;
    }

    .register-page__result-text {
        color: var(--mud-palette-text-secondary);
        max-width: 440px;
    }

    .register-page__result-btn {
        margin-top: 0.5rem;
        padding: 0.6rem 2rem;
    }

    /* ── Step 2: form shell ── */
    .register-page__form-shell {
        display: flex;
        flex-direction: column;
        width: 100%;
        min-height: 100vh;
    }

    /* Header bar */
    .register-page__header {
        background: white;
        border-bottom: 1px solid #e5e7eb;
        height: 64px;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        position: relative;
    }

    .register-page__header-logo img {
        height: 36px;
    }

    .register-page__header-spacer {
        flex: 1;
    }

    /* Stepper — centered in header */
    .register-page__stepper {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        display: flex;
        align-items: center;
    }

    .register-page__step {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .register-page__step-num {
        width: 24px;
        height: 24px;
        border-radius: 50%;
        border: 2px solid #d1d5db;
        color: #9ca3af;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.75rem;
        font-weight: 600;
        flex-shrink: 0;
    }

    .register-page__step-num--active {
        background: var(--mud-palette-primary);
        border-color: var(--mud-palette-primary);
        color: white;
    }

    .register-page__step-label {
        font-size: 0.8125rem;
        font-weight: 500;
        color: #9ca3af;
        white-space: nowrap;
    }

    .register-page__step-label--active {
        color: var(--mud-palette-primary);
        font-weight: 600;
    }

    .register-page__step-line {
        width: 40px;
        height: 1px;
        background: #d1d5db;
        margin: 0 0.625rem;
    }

    /* Body: centered form */
    .register-page__body {
        flex: 1;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .register-page__form-panel {
        width: 100%;
        max-width: 520px;
        background: white;
        border-radius: 12px;
        border: 1px solid #e5e7eb;
        padding: 1.75rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .register-page__login-hint {
        text-align: center;
    }

    .register-page__grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 0.75rem;
    }

    .register-page__hint {
        color: var(--mud-palette-text-secondary);
    }

    .register-page__privacy {
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .register-page__submit {
        width: 100%;
        margin-top: 0.25rem;
    }

    /* ── Step 3: Plan selection ── */
    .register-page__body--plan {
        align-items: flex-start;
        padding-top: 2rem;
    }

    .register-page__plan-shell {
        width: 100%;
        max-width: 960px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.75rem;
    }

    .register-page__plan-heading {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        text-align: center;
    }

    .register-page__plan-title {
        font-family: 'Georgia', serif;
        font-size: 2rem;
        font-weight: 700;
        color: #111827;
        margin: 0;
    }

    .register-page__plan-subtitle {
        font-size: 0.8125rem;
        color: #6b7280;
        margin: 0;
    }

    /* Billing toggle */
    .register-page__billing-toggle {
        display: inline-flex;
        align-items: center;
        background: #f3f4f6;
        padding: 4px;
        border-radius: 10px;
        gap: 2px;
    }

    .register-page__toggle-btn {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 6px 16px;
        border-radius: 7px;
        border: none;
        background: transparent;
        font-size: 0.875rem;
        font-weight: 500;
        color: #374151;
        cursor: pointer;
        transition: background 0.15s, color 0.15s;
        white-space: nowrap;
    }

    .register-page__toggle-btn--active {
        background: var(--mud-palette-primary);
        color: white;
    }

    .register-page__save-badge {
        background: #e5e7eb;
        color: #374151;
        font-size: 0.7rem;
        font-weight: 600;
        padding: 2px 8px;
        border-radius: 999px;
        white-space: nowrap;
    }

    .register-page__toggle-btn--active .register-page__save-badge {
        background: rgba(255,255,255,0.25);
        color: white;
    }

    /* Plan grid */
    .register-page__plan-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
        width: 100%;
    }

    @@media (max-width: 768px) {
        .register-page__plan-grid {
            grid-template-columns: 1fr;
        }
    }

    /* Plan cards */
    .register-page__plan-card {
        position: relative;
        background: #ffffff;
        border: 1.5px solid #e5e7eb;
        border-radius: 14px;
        padding: 1.5rem;
        cursor: pointer;
        transition: border-color 0.15s, box-shadow 0.15s;
        display: flex;
        flex-direction: column;
        gap: 0.875rem;
    }

    .register-page__plan-card:hover {
        border-color: var(--mud-palette-primary);
    }

    .register-page__plan-card--selected {
        border-color: var(--mud-palette-primary) !important;
        box-shadow: 0 0 0 2px var(--mud-palette-primary);
    }

    .register-page__plan-card--popular {
        border-color: var(--mud-palette-primary);
    }

    .register-page__plan-badge {
        position: absolute;
        top: -13px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--mud-palette-primary);
        color: white;
        font-size: 0.7rem;
        font-weight: 600;
        padding: 3px 14px;
        border-radius: 999px;
        white-space: nowrap;
    }

    .register-page__plan-card-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .register-page__plan-name {
        font-size: 1.125rem;
        font-weight: 700;
        color: #111827;
    }

    .register-page__plan-desc {
        font-size: 0.875rem;
        color: #6b7280;
        margin: 0;
        line-height: 1.4;
    }

    /* Price block */
    .register-page__plan-price-block {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .register-page__plan-price {
        display: flex;
        align-items: baseline;
        gap: 2px;
    }

    .register-page__plan-amount {
        font-size: 2rem;
        font-weight: 800;
        color: #111827;
        line-height: 1;
    }

    .register-page__plan-period {
        font-size: 0.9rem;
        color: #6b7280;
        margin-left: 2px;
    }

    .register-page__plan-price-note {
        font-size: 0.8125rem;
        color: #6b7280;
        margin: 0;
    }

    /* Features */
    .register-page__plan-features {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .register-page__plan-features li {
        display: flex;
        align-items: flex-start;
        gap: 0.4rem;
        font-size: 0.875rem;
        color: #374151;
    }

    .register-page__plan-features li span {
        color: #374151;
