@using Oikos.Application.Common
@using Oikos.Common.Resources


<MudDialog>
    <DialogContent>
        <div style="width:300px;overflow:hidden;">
            @if (_loading)
            {
                <MudProgressCircular Indeterminate="true" Class="mx-auto" />
            }
            else
            {
                <EditForm Model="_model" OnValidSubmit="Submit" style="width:100%;">
                    <DataAnnotationsValidator />
                    <MudTextField @bind-Value="_model.RoleName" Variant="Variant.Outlined" Margin="Margin.Dense"
                                  Label="@Loc["RolePage_TableH2"]" For="@(() => _model.RoleName)"></MudTextField>
                    <div class="mt-4 d-flex">
                        <MudSpacer />
                        <MudButton Variant="Variant.Text" FullWidth="false" Color="Color.Primary" Size="Size.Medium"
                                   ButtonType="ButtonType.Submit" StartIcon="@Icons.Material.Filled.Upload">@Loc["RolePage_SubmitText"]</MudButton>
                    </div>
                </EditForm>
            }
        </div>
    </DialogContent>
</MudDialog>
